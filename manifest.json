{
  "name": "SiteBlocker",
  "version": "0.1",
  "manifest_version": 2,
  
  "description": "Website Blocker",
  
  "permissions": [
    "storage",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  
    "background": {
    "scripts": ["background.js"]
  },
  
  "browser_action": {
    "default_popup": "popup.html"
  }
}
